check process sphinx-<%= @appname %> with pidfile /home/<%= @appname %>/shared/log/searchd.production.pid
  group searchd
 start program = "/usr/local/bin/searchd -c /home/<%= @appname %>/current/config/production.sphinx.conf"
    as uid <%= @appname %> and gid <%= @appname %>
  stop program = "/usr/local/bin/searchd --stop -c /home/<%= @appname %>/current/config/production.sphinx.conf"
    as uid <%= @appname %> and gid <%= @appname %>

  if mem > 100 Mb for 3 cycles then restart
  if cpu > 80% for 5 cycles then restart
  if 20 restarts within 20 cycles then timeout
